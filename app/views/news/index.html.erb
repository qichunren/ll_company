<h1>Listing news</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Content</th>
    <th>Reading count</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= news.news_category.name rescue news.news %></td>
    <td><%= news.content %></td>
    <td><%= news.reading_count %></td>
    <td><%= news.author %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

